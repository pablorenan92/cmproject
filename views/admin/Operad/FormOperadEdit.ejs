<%- include('../../partials/headerMain.ejs')%> 
    <body class="sb-nav-fixed">
        <%- include('../../partials/navbarHorizon.ejs')%> 
        <div id="layoutSidenav">
            <div id="layoutSidenav_nav">
                <%- include('../../partials/navbarVertical.ejs')%> 
            </div>
            <div id="layoutSidenav_content">
                <main>
                    <div class="container-fluid px-4">
                        <h1 class="mt-4">Cadastro de Usuários</h1>
                        <ol class="breadcrumb mb-4">
                            <li class="breadcrumb-item"><a href="/home">Home</a></li>
                            <li class="breadcrumb-item active">Usuários/ Edit</li>
                        </ol>
                        <div class="card mb-4">
                            <div class="card-body">
                                <p class="mb-0">
                                    <nav>
                                        <div class="nav nav-tabs" id="nav-tab" role="tablist">
                                          <button class="nav-link disabled" id="CadEdit-tab" data-bs-toggle="tab" data-bs-target="#CadEdit" type="button" role="tab" aria-controls="nav-home" aria-selected="false">Pesquisa</button>
                                          <button class="nav-link active" id="CadNew-tab" data-bs-toggle="tab" data-bs-target="#CadNew" type="button" role="tab" aria-controls="nav-profile" aria-selected="false">Cadastro</button>
                                        </div>
                                    </nav>
                                    <div class="tab-content tabCont" id="nav-tabContent">
                                        <div class="tab-pane fade disabled" id="CadEdit" role="tabpanel" aria-labelledby="CadEdit-tab">
                                            
                                        </div>
                                        <div class="tab-pane fade show active" id="CadNew" role="tabpanel" aria-labelledby="CadNew-tab">
                                            <form class="form-containerNew" method="POST" action="/Operad/update">
                                                <div class="container">
                                                    <div class="card-body">
                                                        <input type="hidden" name="id" value="<%= Operad.id %>"><br>
                                                        <div class="row">
                                                            <div class="col-sm-5 col-md-6">
                                                                <label for="OperadFirstName"><b>Primeiro Nome</b></label>
                                                                <input class="form-control" name="OperadFirstName" type="text" value="<%= Operad.OperadFirstName%>"/>
                                                            </div>
                                                            <div class="col-sm-5 offset-sm-2 col-md-6 offset-md-0">
                                                                <label for="OperadLastName"><b>Sobrenome</b></label>
                                                                <input class="form-control" name="OperadLastName" type="text" value="<%= Operad.OperadLastName%>"/><br>                           
                                                            </div>
                                                        </div>
                                                        <div class="row">
                                                            <div class="col">
                                                                <label for="OperadEmail"><b>Email:</b></label>
                                                                <input class="form-control" type="email" name="OperadEmail" value="<%= Operad.OperadEmail%>"><br>
                                                            </div>
                                                        </div>
                                                        <div class="row">
                                                            <div class="col">
                                                                <label for="OperadPass"><b>Senha:</b></label>
                                                                <input class="form-control" name="OperadPass" type="password"/><br>
                                                            </div>
                                                        </div>
                                                        <div class="d-grid">
                                                            <button type="submit" class="btn btn-success btn-block">
                                                                Atualizar
                                                            </button><br>
                                                            <button href="/Admin/Operad" class="btn btn-danger btn-block">
                                                                Cancelar
                                                            </button>
                                                        </div>
                                                    </div>   
                                                </div>       
                                            </form>
                                        </div> 
                                    </div>
                                </p>
                            </div>
                        </div>
                    </div>
                </main>
            <%- include('../../partials/footer.ejs')%> 
        </div>
    </div>
<%- include('../../partials/footerScript.ejs')%>  