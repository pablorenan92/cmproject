                        <div class="container">
                            <div class="row justify-content-center">
                                <div class="col-lg-5">
                                    <div class="card shadow-lg border-0 rounded-lg mt-5">
                                        <div class="card-header">
                                            <h3 class="text-center align-items-center">
                                                <img src="https://img.icons8.com/external-kiranshastry-gradient-kiranshastry/64/000000/external-user-cyber-security-kiranshastry-gradient-kiranshastry-4.png"/>
                                            </h3>
                                        </div>
                                        <div class="card-body">
                                            <form method="POST" action="/EmailSearch">
                                                <div class="container">
                                                    <div class="container">
                                                        <div class="card-body">
                                                            <div class="row">
                                                                <div class="col">
                                                                    <label for="OperadEmail"><b>Email:</b></label>
                                                                    <div class="input-group">
                                                                        
                                                                        <input class="form-control" type="email" name="OperadEmail" placeholder="name@example.com">
                                                                        <div class="input-group-text">
                                                                            <a href="#" type="submit"><img class="bg_imgIco" src="https://img.icons8.com/external-kiranshastry-gradient-kiranshastry/64/000000/external-search-interface-kiranshastry-gradient-kiranshastry.png"/>
                                                                            </a>
                                                                        </div>
                                                                        
                                                                    </div>
                                                                </div>
                                                            </div>
                                                            <div class="row">
                                                                <div class="col-sm-5 col-md-6">
                                                                    <label for="OperadFirstName"><b>Nome</b></label>
                                                                    <input class="form-control" readonly="readonly" name="OperadFirstName" type="text" placeholder="Digite seu nome."/>
                                                                </div>
                                                                <div class="col-sm-5 offset-sm-2 col-md-6 offset-md-0">
                                                                    <label for="OperadLastName"><b>Sobrenome</b></label>
                                                                    <input class="form-control" readonly="readonly" name="OperadLastName" type="text" placeholder="Digite seu sobrenome."/>                           
                                                                </div>
                                                            </div>
                                                            <div class="row">
                                                                <div class="col">
                                                                    <label for="OperadPass"><b>Senha:</b></label>
                                                                    <input class="form-control" readonly="readonly" name="OperadPass" type="password" placeholder="*********"/><br>
                                                                </div>
                                                            </div>
                                                            <div class="d-grid">
                                                            <button type="submit" class="btn btn-primary btn-block disabled">
                                                                Resetar
                                                            </button>
                                                        </div> 
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                <div class="card-footer text-center py-3">
                                    <div class="small"><a href="/">Tem uma conta? VÃ¡ para o login</a></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </main>
            </div>
            <div id="layoutAuthentication_footer">
                <%- include('../../partials/footer.ejs')%>
            </div>
        </div>
    </body>
<%- include('../../partials/footerScript.ejs')%>
