<%- include('../../partials/headerMain.ejs')%>
    <body>    
        <div id="layoutAuthentication">
            <div id="layoutAuthentication_content">
                <main>
                    <div class="container-login" style=" background-image: url('img/Bg_login.jpg');">
                        <div class="container">
                        <div class="row justify-content-center">
                            <div class="col-lg-5">
                                <div class="card shadow-lg border-0 rounded-lg mt-5">
                                    <div class="card-header">
                                        <h3 class="text-center align-items-center"><img src="https://img.icons8.com/external-kiranshastry-gradient-kiranshastry/64/000000/external-padlock-banking-and-finance-kiranshastry-gradient-kiranshastry.png"/></h3>
                                    </div>
                                    <div class="card-body">
                                        <form id="form" method="POST" action="/authenticate">
                                            <div class="row">
                                                <div class="col">
                                                    <label for="OperadEmail"><b>Email:</b></label>
                                                    <input id="OperadEmail" class="form-control" type="email" name="OperadEmail" placeholder="name@example.com"><br>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col">
                                                    <label for="OperadPass"><b>Senha:</b></label>
                                                    <input id="OperadPass" class="form-control" name="OperadPass" type="password" placeholder="*********"/><br>
                                                </div>
                                            </div>
                                            <div class="form-check mb-3">
                                                <input class="form-check-input" id="inputRememberPassword" type="checkbox" value="" />
                                                <label class="form-check-label" for="inputRememberPassword">Lembre-se de mim (Em Breve)</label>
                                            </div>
                                            <div class="d-flex align-items-center justify-content-between  mt-4 mb-0">
                                                <a class="small" href="/forgotPassword">Esqueceu a senha? (Em Breve)</a>
                                                <button type="submit" class="btn btn-lg btn-primary btn-block">
                                                    Login
                                                </button>
                                            </div><br>
                                        </form>
                                    </div>
                                    <div class="card-footer text-center py-3">
                                        <div class="small"><a href="/register">Precisa de uma conta? Inscrever-se!</a></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>   
                </main>
            </div>
            <div id="layoutAuthentication_footer">
                <%- include('../../partials/footer.ejs')%>
            </div>
        </div>
<%- include('../../partials/footerScript.ejs')%>
