<%- include('../../partials/headerMain.ejs')%> 
    <body class="sb-nav-fixed">
        <%- include('../../partials/navbarHorizon.ejs')%> 
        <div id="layoutSidenav">
            <div id="layoutSidenav_nav">
                <%- include('../../partials/navbarVertical.ejs')%> 
            </div>
            <div id="layoutSidenav_content">
                <main>
                    <div class="container-fluid px-4">
                        <h1 class="mt-4">Cadastro de Bairros</h1>
                        <ol class="breadcrumb mb-4">
                            <li class="breadcrumb-item"><a href="/home">Home</a></li>
                            <li class="breadcrumb-item active">Bairros/ Editar</li>
                        </ol>
                        <div class="card mb-4">
                            <div class="card-body">
                                <nav>
                                    <div class="nav nav-tabs" id="nav-tab" role="tablist">
                                      <button class="nav-link disabled" id="CadEdit-tab" data-bs-toggle="tab" data-bs-target="#CadEdit" type="button" role="tab" aria-controls="nav-home" aria-selected="false">Pesquisa</button>
                                      <button class="nav-link active" id="CadNew-tab" data-bs-toggle="tab" data-bs-target="#CadNew" type="button" role="tab" aria-controls="nav-profile" aria-selected="false">Cadastro</button>
                                    </div>
                                </nav>
                                <div class="tab-content tabCont" id="nav-tabContent">
                                    <div class="tab-pane fade disabled" id="CadEdit" role="tabpanel" aria-labelledby="CadEdit-tab">
                                        
                                    </div>
                                    <div class="tab-pane fade show active" id="CadNew" role="tabpanel" aria-labelledby="CadNew-tab">
                                        <form class="form-containerNew" method="POST" action="/Bairros/update">
                                            <div class="container">
                                                <div class="card-body">
                                                    <input type="hidden" name="id" value="<%= Bairros.id %>"><br>
                                                        <label for="BairroName"><b>Descrição Bairro:</b></label>
                                                        <input class="form-control" type="text" name="BairroName" value="<%= Bairros.BairroName %>"><br>
                                                        <label for="EstLocalDesc"><b>Localização:</b></label>
                                                        <select class="form-select" name="EstLocalDesc" aria-label="Default select example">
                                                            <option disabled selected>Localização</option>
                                                                <% EstLocal.forEach((EstLocal) => { %>
                                                                    <% if (EstLocal.id == Bairros.RegEstLocalId) { %>
                                                                        <option value="<%= EstLocal.id %>" selected><%= EstLocal.EstLocalDesc %></option>
                                                                    <% } else { %>
                                                                    <option value="<%= EstLocal.id %>"><%= EstLocal.EstLocalDesc %></option>
                                                                    <% } %>  
                                                                <% }) %>
                                                        </select><br>
                                                <div class="d-grid">
                                                    <label for="Cidades"><b>Cidade:</b></label>
                                                        <select name="Cidades" class="form-select" aria-label="Default select example">
                                                            <option disabled selected>Cidade</option>
                                                            <% Cidades.forEach((Cidades) => { %>
                                                                <% if (Cidades.id == Bairros.RegCidadeId) { %>
                                                                    <option value="<%= Cidades.id %>" selected><%= Cidades.CitName %></option>
                                                                <% } else { %>
                                                                    <option value="<%= Cidades.id %>"><%= Cidades.CitName %></option>
                                                                <% } %>  
                                                            <% }) %>
                                                        </select><br>
                                                    <button type="submit" class="btn btn-success btn-block">
                                                         Atualizar
                                                    </button><br>
                                                    <button href="/Admin/Bairros" class="btn btn-danger btn-block">
                                                        Cancelar
                                                    </button>
                                                </div> 
                                            </div>       
                                        </form>
                                    </div> 
                                </div>
                            </div>
                        </div>
                    </div>
                </main>
            <%- include('../../partials/footer.ejs')%> 
        </div>
    </div>
<%- include('../../partials/footerScript.ejs')%>

